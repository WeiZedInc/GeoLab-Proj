<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GeoLab_Proj.ResultPage"
             xmlns:view="clr-namespace:GeoLab_Proj"
             x:DataType="view:ResultVM"
             Title="Polygon Information">
    <ScrollView>
        <VerticalStackLayout>
            <HorizontalStackLayout Margin="10" Padding="10" Spacing="10">
                
                <!--  0,100 100,100 0,0  -->
                <Label Text="Тип фігури: "
                SemanticProperties.HeadingLevel="Level2"
                FontSize="18"/>
                
                <Label Text="{Binding FigureType}"
                SemanticProperties.HeadingLevel="Level2"
                FontSize="18"/>

            </HorizontalStackLayout>

            <CollectionView  ItemsSource="{Binding AllSides}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="x:Double">
                        <Frame HorizontalOptions="FillAndExpand">
                            <Grid ColumnDefinitions="*,*">
                                <Label Text="{Binding .}"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>